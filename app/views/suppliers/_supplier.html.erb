<div id="<%= dom_id supplier %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= supplier.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= supplier.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Contact:</strong>
    <%= supplier.contact %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Account:</strong>
    <%= supplier.account %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Account digit:</strong>
    <%= supplier.account_digit %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Account type:</strong>
    <%= supplier.account_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bank:</strong>
    <%= supplier.bank %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this supplier", supplier, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this supplier", edit_supplier_path(supplier), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
