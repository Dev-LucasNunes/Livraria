<div class="w-full ">
    <% if notice.present? %>
      <%= render 'shared/custom_alert' %>
    <% end %>


  <div class="flex justify-between items-center mt-8 ">
    <h1 class="font-bold text-4xl text-blue-600">Autores</h1>
    <%= link_to "Novo autor", new_author_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

 <div id="authors" class="min-w-full mt-8">
   <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-white dark:text-gray-400">
      <thead class="text-xs uppercase bg-gray-700 text-gray-300">
        <tr>
          <th scope="col" class="px-16 py-3">
            Nome
          </th>
          <th scope="col" class="px-16 py-3">
             Nacionalidade
          </th>
           <th scope="col" class="px-16 py-3">
               CPF
           </th>
           <th scope="col" class="px-16 py-3">
               Data de Nascimento
           </th>
           <th scope="col" class="px-6 py-3">
                  <span class="sr-only">Edit</span>
           </th>
        </tr>
      </thead>
            <tbody>
            <% @authors.each do |author| %>
              <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600">
                <td class="px-8 py-4 font-medium whitespace-nowrap text-white">
                  <%= link_to author.name, author %>
                </td>
                <td class="px-16 py-4">
                  <%= author.nationality %>
                </td>
                <td class="px-16 py-4">
                  <% cpf_object = CPF.new(author.cpf) %>
                  <span class="text-1xl text-gray-200"><%= cpf_object.formatted %></span>
                </td>
                <td class="px-16 py-4">
                  <%= author.date_of_birth.strftime("%d/%m/%Y") if author.date_of_birth.present? %>
                </td>
                <td class="py-4 text-right">
                  <div class="flex justify-end mr-5">
                    <%= link_to edit_author_path(author) do %>
                      <button type="button" class="text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800">
                        Editar
                      </button>
                    <% end %>
                    <%= button_to "Excluir", author, method: :delete, data: {controller: 'alert', action: 'click->alert#showAlert', alert_title_value: 'VocÃª tem certeza?'}, class: "text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center me-2 mb-2 dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-500 dark:focus:ring-red-800" %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

