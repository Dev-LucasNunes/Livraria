<%= form_with(model: author, class: "contents") do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <ul>
        <% author.errors.each do |error| %>
          <% formatted_message = error.full_message %>
          <% if formatted_message.include?("of birth") %>
            <% formatted_message = formatted_message.gsub("Date of birth", "") %>
          <% else %>
            <% formatted_message = formatted_message.gsub(/\A[A-Za-z]+ /, '') %>
          <% end %>
          <li><%= formatted_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :nationality %>
    <%= form.text_field :nationality, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, maxlength: 11, pattern: "\\d*", oninput: "this.value=this.value.replace(/\\D/g,'')", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Confirmar", class: "text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-6 py-2 text-center me-2 mt-4 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" %>
  </div>
<% end %>
